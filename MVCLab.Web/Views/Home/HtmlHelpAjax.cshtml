
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HtmlHelpAjax</title>
</head>
<body>
    <div> 
        @Ajax.ActionLink("取得時間","Now",new AjaxOptions{ UpdateTargetId ="time" })
        <time id="time"></time>
    </div>


    <h4>Form Demo</h4>
    <div>
        <span id="result"></span>
        <h1>Ajax Form Demo</h1>
        @using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId="result" }))
        {
            @Html.AntiForgeryToken()

            @Html.Label("ID", "帳號")
            @Html.TextBox("ID")

            @Html.Label("PW", "密碼")
            @Html.Password("PW")

            <br />

            @Html.Label("Sex", "男")
            @Html.RadioButton("Sex", "M", true)
            @Html.Label("Sex", "女")
            @Html.RadioButton("Sex", "F")

            <br />

            @Html.Label("Add", "地區")
            @Html.DropDownList("Add", ViewBag.Adds as SelectList)

            <br />

            @Html.Label("Year18", "是否大於18")
            @Html.CheckBox("Year18")

            <br />

            @Html.Label("Note", "備註")
            @Html.TextArea("Note")

            @Html.Hidden("Hide", "hide")
            <input type="submit" value="送出"/>
        }
    </div>

    @section scripts{
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    }
</body>
</html>
