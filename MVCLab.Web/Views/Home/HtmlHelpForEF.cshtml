@model MVCLab.Domain.CRM.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Form Demo</h4>
<div>
    <h1>此頁 @Url.Action("HtmlHelpFor")</h1>
    @Html.ValidationSummary(false)

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.LabelFor(m => m.UserName)
        @Html.TextBox("UserName")

        @Html.ValidationMessageFor(m => m.UserName)


        @Html.LabelFor(m => m.PW)
        @Html.Password("PW")

        <br />

        @Html.LabelFor(m => m.Sex, "男")
        @Html.RadioButtonFor(m => m.Sex, "M")
        @Html.LabelFor(m => m.Sex, "女")
        @Html.RadioButtonFor(m => m.Sex, "F")

        <br />

        @Html.LabelFor(m => m.Add)
        @Html.DropDownListFor(m => m.Add, ViewBag.Adds as SelectList)

        <br />

        @Html.LabelFor(m => m.Year18)
        @Html.CheckBoxFor(m => m.Year18)

        <br />

        @Html.LabelFor(m => m.Note)
        @Html.TextAreaFor(m => m.Note)

        @Html.HiddenFor(m => m.Hide, new { Value = "Hide" })
        <input type="submit" value="送出" />
    }

</div>
